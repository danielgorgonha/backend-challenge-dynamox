{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@Modules/*": ["modules/*"],
      "@Config/*": ["config/*"],
      "@Shared/*": ["shared/*"],
      "@Errors/*": ["errors/*"],
      "@Util/*": ["util/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": []
}
